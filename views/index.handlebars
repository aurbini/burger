<h1> hello world </h1>

<h2>Burgers you'd like to EAt</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</ul>
<h2>Create a Burger</h2>
<form id="create-burger" class="button-size">
  <textarea type="text" name="burger"></textarea>
  <button type="submit">Save Burger!</button>
</form>

<script>
  $("#create-burger").on("submit", function(event) { 
    // Make sure to preventDefault on a submit event.
    event.preventDefault();

    // [name=plan] will find an element with a "name" attribute equal to the string "plan"
    var newBurger = {
      name: $("#create-burger [name=burger]").val().trim()
    };
    console.log(newBurger); 
    // Send the POST request.
    $.ajax("/api/burger", {
      type: "POST",
      data: newBurger
    }).then(
      function() {
        console.log("created new burger");
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });
  $(".devoured-button").on("click", function(event) {
  //  var id = $(this).attr('data-id'); 

    var id = $(this).attr('data-burgerid');
    console.log('devoured clicked')
    var devouredBurger = {
      devoured: true 
    }
    // Make sure to preventDefault on a submit event.
    event.preventDefault();
    //console.log(id); 
    // [name=plan] will find an element with a "name" attribute equal to the string "plan"
    $.ajax("/api/burger/" + id, {
      type: "PUT",
      data: devouredBurger
    }).then(
      function() {
        console.log("devoured clicked");
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });
</script>

